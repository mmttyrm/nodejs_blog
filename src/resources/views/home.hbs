<div class="mt-4">
    <div class="row">

        {{#each courses}}
        <div class=" col-sm-12 col-md-6 col-lg-4 col-xl-3 ">
            <div class="card mb-4 mx-auto" style="width: 18rem;">
                <a href="/courses/{{this.slug}}">
                    <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}">
                        <h5 class="card-title d-inline-block " style="max-width: 220px;white-space: nowrap;overflow: hidden;
  text-overflow: ellipsis;">{{this.name}}</h5>
                    </a>
                    <p class="card-text" style="max-width: 254px;height: 52px ; white-space: normal; overflow: hidden;
  text-overflow: ellipsis;">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Buy Course</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>