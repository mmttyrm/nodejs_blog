<div class="mt-4">
    <h3>Sửa khoá học</h3>
    <form method="POST" action="/courses/{{course._id}}?_method=PUT" >
        <div class="form-group mb-3">
            <label for="nameCourses" class="form-label"></label>Name Course</label>
            <input type="text" class="form-control" id="nameCourses" value="{{course.name}}" name="name">
        </div>
        <div class="form-group mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" name="description" id="description" cols="20" rows="3">{{course.description}}</textarea>
        </div>
        <div class="form-group mb-3">
            <label for="videoId" class="form-label"></label>Video Id</label>
            <input type="text" class="form-control" id="videoId" value="{{course.videoId}}" name="videoId">
        </div>
        <div class="form-group mb-3">
            <label for="level" class="form-label"></label>Level</label>
            <input type="text" class="form-control" id="level" value="{{course.level}}" name="level">
        </div>
        <button type="submit" class="btn btn-primary">Cập nhật khoá học</button>
    </form>
</div>