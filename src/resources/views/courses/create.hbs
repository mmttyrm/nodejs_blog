<div class="mt-4">
    <h3>Đăng khoá học</h3>
    <form method="POST" action="/courses/store" >
        <div class="form-group mb-3">
            <label for="nameCourses" class="form-label"></label>Name Course</label>
            <input type="text" class="form-control" id="nameCourses" name="name">
        </div>
        <div class="form-group mb-3">
            <label for="description" class="form-label">Description</label>
            {{!-- <input type="text" class="form-control" id="description" name="description"> --}}
            <textarea type="text" class="form-control" name="description" id="description" cols="20" rows="10"></textarea>
        </div>
        <div class="form-group mb-3">
            <label for="videoId" class="form-label"></label>Video Id</label>
            <input type="text" class="form-control" id="videoId" name="videoId">
        </div>
        <div class="form-group mb-3">
            <label for="level" class="form-label"></label>Level</label>
            <input type="text" class="form-control" id="level" name="level">
        </div>
        <button type="submit" class="btn btn-primary">Thêm khoá học</button>
    </form>
</div>